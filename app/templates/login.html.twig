{% extends '/base.html.twig' %}

{% block customstyles %}<link rel="stylesheet" href="{{ asset('login/customStyles.css') }}"/> {% endblock %}

{% block title %}{{ 'App.Authentication.Login.login'|trans }}{% endblock %}

{% block body %}

        <div class="login-container">
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
            <div class="brand-img" style="align-content: center">
                <img src="{{ asset('login/images/dsy.jpeg') }}" alt="">
            </div>
    <form action="{{ path('app_login') }}" class="form-control" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" class="form-control"/>
        <input type="hidden" name="_target_path" value="{{ path('index_page') }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="form-control btn btn-success">{{ 'App.Authentication.Login.login'|trans }}</button>
    </form>
        </div>
{% endblock %}