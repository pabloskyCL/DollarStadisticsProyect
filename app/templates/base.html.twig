<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('static/bootstrap/dist/css/bootstrap.min.css') }}">
        {% endblock %}
        {% block customstyles %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('static/bootstrap/dist/js/bootstrap.js') }}"></script>
        {% endblock %}
    </head>
    <body>
    {% block navbar %}
    <nav class="navbar sticky-top navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">{{ 'App.NavBar.app_brand_name'|trans }}</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <form class="d-flex" action="{{ path('app_logout') }}">
                    <button class="btn btn-outline-danger" type="submit">{{ 'App.Authentication.Logout'|trans }} </button>
                </form>
                {% else %}
                    <form class="d-flex" action="{{ path('app_login') }}">
                        <button class="btn btn-outline-primary" type="submit">{{ 'App.Authentication.Login.login'|trans }} </button>
                    </form>
            {% endif %}
        </div>
    </nav>
    {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
